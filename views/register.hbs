<div id="role__form-container"
     class="mt-3">
    <h1>Register</h1>
    <div id="app">
        <form action="{{URL.REGISTER}}"
              method="POST"
              class="mt-3">
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="text"
                       name="email"
                       value="{{email}}"
                       class="form-control {{#if errors.email}}is-invalid{{/if}}">
                {{#if errors.email}}
                <div class="invalid-feedback">
                    {{errors.email}}
                </div>
                {{/if}}
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password"
                       name="password"
                       class="form-control {{#if errors.password}}is-invalid{{/if}}">
                {{#if errors.password}}
                <div class="invalid-feedback">
                    {{errors.password}}
                </div>
                {{/if}}
            </div>
            <div class="mb-3">
                <label class="form-label">Full Name</label>
                <input type="text"
                       name="full-name"
                       value="{{fullName}}"
                       class="form-control {{#if errors.fullName}}is-invalid{{/if}}">
                {{#if errors.fullName}}
                <div class="invalid-feedback">
                    {{errors.fullName}}
                </div>
                {{/if}}
            </div>
            <button type="submit"
                    class="btn btn-success mt-3">Register</button>
        </form>
    </div>
</div>