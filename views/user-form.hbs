<div id="role__form-container"
     class="mt-3">
    <h1>User Form</h1>
    <div id="app">
        <form action="{{URL.USER_PROCESS}}"
              method="POST"
              class="mt-3">
            <div class="mb-3">
                <label class="form-label">Full Name</label>
                <input type="text"
                       name="full-name"
                       value="{{fullName}}"
                       class="form-control {{#if errors.fullName}}is-invalid{{/if}}">
                {{#if errors.fullName}}
                <div class="invalid-feedback">
                    {{errors.fullName}}
                </div>
                {{/if}}
            </div>
            <div class="mb-3">
                <label class="form-label">Role</label>
                <select class="form-select">
                    {{#each roles as |role|}}
                    <option value="{{role}}"
                            {{#eq role @root.role}}selected="selected"
                            {{/eq}}>{{role}}</option>
                    {{/each}}
                </select>
            </div>

            <button type="submit"
                    class="btn btn-success mt-3">Submit</button>
        </form>
    </div>
</div>