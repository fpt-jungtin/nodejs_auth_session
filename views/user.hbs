<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Email</th>
            <th scope="col">Full Name</th>
            <th scope="col">isVerified</th>
            <th scope="col">Role</th>
            <th scope="col">Created At</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {{#each users as |user|}}
        <tr>
            <th scope="row">{{user.id}}</th>
            <td>{{user.email}}</td>
            <td>{{user.fullName}}</td>
            <td>{{user.isVerified}}</td>
            <td>{{user.Role.name}}</td>
            <td>{{date user.createdAt "DD/MM/YYYY HH:mm:ss"}}</td>
            <td><a href="{{@root.URL.USER_UPDATE}}/{{user.id}}"
                   class="btn btn-warning">Update</a></td>
            <td>
                <form action="{{@root.URL.USER_DELETE}}/{{user.id}}"
                      method="POST">
                    <button class="btn btn-danger"
                            type="submit">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>