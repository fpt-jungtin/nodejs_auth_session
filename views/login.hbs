<div id="role__form-container"
     class="mt-3">
    <h1>Login</h1>
    {{#if errMsg}}
    <div class="alert alert-danger"
         role="alert">
        {{errMsg}}
    </div>
    {{/if}}
    <form action="{{URL.LOGIN}}"
          method="POST"
          class="mt-3">
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="text"
                   name="email"
                   class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password"
                   name="password"
                   class="form-control">
        </div>
        <button type="submit"
                class="btn btn-success mt-3">Login</button>
    </form>
</div>